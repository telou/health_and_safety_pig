<div class="page-background">
  <div class="container">
    <div class="title-header">
      <h1 class="title">All Translations</h1>
      <div class="top-link">
        <%= link_to "Translate a phrase", root_path %>
        <i class="fas fa-arrow-circle-right"></i>
      </div>

    </div>

    <div class="translations-body">
      <% @terms.each do |term| %>
        <div class="translation-card">

          <div>
            <div class="d-flex">
            <p class="blue"> English:</p> <p class="pink"> <%= term.phrase %></p>
            </div>
            <div class="d-flex">
              <% if term.translation %>
                <p class="blue">Pig-latin:</p> <p class="pink"> <%= term.translation.translation %></p>
              <% end %>
            </div>
          </div>

          <div class="card-options">
            <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, term_path(term), method: :delete, class: 'btn delete-btn' %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>



